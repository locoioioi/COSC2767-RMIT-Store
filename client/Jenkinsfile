pipeline {
    agent any
    tools {
        nodejs "Node" 
        docker "Docker"
    }

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-account') // Jenkins credential ID for Docker Hub
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Clone the repository
                git branch: 'main', url: 'https://github.com/locoioioi/COSC2767-RMIT-Store'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('client') {
                    // Install dependencies
                    sh 'npm ci'
                }
            }
        }

        stage('Build React App') {
            steps {
                dir('client') {
                    // Run the build script
                    sh 'npm run build'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                // Save the build output for later use or deployment
                archiveArtifacts artifacts: 'client/dist/**/*', allowEmptyArchive: false
            }
        }

        stage('Build and deploy to docker hub') {
            steps {
                dir ('client') {
                    // Build the docker image
                    sh 'docker build -t locoioioi/cosc2767-rmit-store-client .'
                    
                    // Login to Docker Hub
                    sh """
                    echo ${DOCKER_HUB_CREDENTIALS} | docker login -u ${DOCKER_HUB_CREDENTIALS} --password-stdin
                    """

                    // Push the image to Docker Hub
                    sh 'docker push locoioioi/cosc2767-rmit-store-client'
                }
            }
        }
    }

    post {
        success {
            echo 'React.js build completed successfully!'
        }
        failure {
            echo 'React.js build failed. Check the logs for more details.'
        }
    }
}
